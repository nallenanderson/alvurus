@import url('https://fonts.googleapis.com/css?family=Nunito:400,700');

$font = 'Nunito', sans-serif
$black = #212121
$green = #2BBBAD
$white = #FFFFFF
$red = #e74c3c
$blue = #3498db
$grey = #9e9e9e

*
  box-sizing: border-box

a, a:focus, a:hover
  text-decoration: none

h1, h2, h3, h4, h5
  margin: 0

body
  font-family: $font
  font-size: 18px
  margin: 0
  padding: 0
  background: #fcfcfc
  color: #414141

.main__section
  padding-top: 40px

.reservation__form
  background: #FFFFFF
  box-shadow: 0 2px 4px rgba($black, 0.3)
  min-width: 400px
  padding: 25px 40px
  h1
    font-size: 2rem

.faux__label
  color: $grey
  font-size: 1rem

nav
  .brand-logo
    font-size: 1.1rem
    letter-spacing: 3px
    color: $green
  ul
    a
      letter-spacing: 3px
      transition: 0.3s ease-in-out
      padding: 0 30px
      &:hover
        background: rgba($white, 0.05)
        color: $green


.submit__button
  border: solid 2px darken($green, 5%)
  background: $green
  color: $white
  border-radius: 0
  width: 100%
  padding: 10px 0
  font-size: 1.1rem
  letter-spacing: 4px
  font-family: $font
  text-transform: uppercase
  transition: 0.2s ease-in-out
  display: block
  text-align: center
  &.fb__button
    background: #3d5c95
    border-color: #3d5c95
  &:hover
    opacity: 0.6

.secondary__button
  background: $blue
  border-radius: 2
  border-color: $blue
  &:hover
    background: #2980b9

.progress
  margin: 1.6rem 0
  background: rgba(#ccc, 0.4)

.centered
  text-align: center

.page__link
  display: inline-block
  text-transform: uppercase
  letter-spacing: 1px
  border-bottom: 1px solid #ccc

p
  font-size: 1rem

.black__back
  background: #212121

.error__message
  text-align: center
  font-size: 0.8rem
  font-weight: bold
  letter-spacing: 2px
  color: $red

a
  &.color__red
    color: $red
  &.color__grey
    color: $grey

label
  pointer-events: none
  p &
    pointer-events: auto
